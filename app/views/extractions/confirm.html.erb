<h2 class="text-xl font-bold mb-4 text-center">単語と意味の編集</h2>

<%= form_with url: select_target_extractions_path, method: :post, local: true, data: { turbo: false } do %>
  <div class="space-y-4">
    <% @entries.each_with_index do |entry, index| %>
      <div class="flex gap-4 items-center">
        <!-- 単語入力 -->
        <input type="text"
               name="entries[][word]"
               value="<%= entry[:word] %>"
               class="w-1/3 border border-gray-300 rounded px-3 py-2"
               required>

        <!-- 意味入力 -->
        <input type="text"
               name="entries[][meaning]"
               value="<%= entry[:meaning] %>"
               placeholder="意味を取得できませんでした"
               class="w-2/3 border border-gray-300 rounded px-3 py-2"
               required>
      </div>
    <% end %>
  </div>

  <div class="mt-6 text-center">
    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
      OK
    </button>
  </div>
<% end %>