<h2 class="text-xl font-bold mb-4">単語帳を編集</h2>

<%= form_with model: [@folder, @wordbook], local: true do |f| %>
  <%= render "shared/error_messages", resource: @wordbook %>

  <div class="mb-4">
    <%= f.label :title, "タイトル", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :title, class: "w-full mt-1 border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :description, "説明（任意）", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :description, class: "w-full mt-1 border border-gray-300 rounded px-3 py-2", rows: 4 %>
  </div>

  <div class="mb-4">
    <label class="inline-flex items-center">
      <%= f.check_box :is_public %>
      <span class="ml-2 text-sm text-gray-700">公開する</span>
    </label>
  </div>

  <div class="text-right">
    <%= f.submit "更新", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 text-sm" %>
  </div>
<% end %>