<h2 class="text-xl font-bold mb-6 text-center">単語帳の移動</h2>

<%= form_with url: move_wordbooks_folder_wordbooks_path(@folder), method: :patch, local: true do |f| %>
  <div class="mb-4">
    <p class="mb-2 font-medium">移動先のフォルダを選んでください：</p>
    <%= f.select :target_folder_id, options_from_collection_for_select(@other_folders, :id, :name), {}, class: "w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <% params[:wordbook_ids]&.each do |id| %>
    <%= hidden_field_tag "wordbook_ids[]", id %>
  <% end %>

  <div class="text-right">
    <%= f.submit "移動する", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>
<% end %>