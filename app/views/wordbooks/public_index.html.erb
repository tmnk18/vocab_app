<h2 class="text-xl font-bold mb-6 text-center">公開単語帳一覧</h2>

<% if @wordbooks.any? %>
  <ul class="space-y-4">
    <% @wordbooks.each do |wordbook| %>
      <li class="p-4 bg-white shadow rounded">
        <p class="text-lg font-semibold"><%= wordbook.title %></p>
        <p class="text-sm text-gray-600 mb-2"><%= wordbook.description.presence || "（説明なし）" %></p>
        <% if wordbook.folder.user.present? %>
          <p class="text-xs text-gray-400">by <%= wordbook.folder.user.username %></p>
        <% end %>
        <%= link_to "詳細を見る", folder_wordbook_word_entries_path(wordbook.folder, wordbook), class: "text-blue-600 hover:underline text-sm mt-2 inline-block" %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="text-gray-600 text-sm">現在、公開されている単語帳はありません。</p>
<% end %>