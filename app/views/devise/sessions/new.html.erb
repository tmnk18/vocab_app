<div class="min-h-screen flex items-center justify-center bg-gray-50 px-4">
  <div class="bg-white shadow-md rounded px-8 py-10 w-full max-w-md">
    <h2 class="text-2xl font-bold mb-6 text-center">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <div>
        <%= f.label :email, "メールアドレス", class: "block mb-1 text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :password, "パスワード", class: "block mb-1 text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "mr-5" %>
          <%= f.label :remember_me, "ログイン情報を保存する", class: "text-sm text-gray-700" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "ログイン", class: "w-full bg-blue-600 text-white font-semibold py-2 px-4 rounded hover:bg-blue-700 transition" %>
      </div>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600 space-y-2">
      <%= link_to "パスワードを忘れた場合", new_password_path(resource_name), class: "text-blue-600 hover:underline" %><br>
      <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "text-blue-600 hover:underline" %>
    </div>
  </div>
</div>