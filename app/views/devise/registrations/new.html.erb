<div class="min-h-screen flex items-center justify-center bg-gray-50 px-4">
  <div class="bg-white shadow-md rounded px-8 py-10 w-full max-w-md">
    <h2 class="text-2xl font-bold mb-6 text-center">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :username, "ユーザー名", class: "block mb-1 text-sm font-medium text-gray-700" %>
        <%= f.text_field :username, autofocus: true, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :email, "メールアドレス", class: "block mb-1 text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :password, "パスワード", class: "block mb-1 text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 mt-1" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "確認用パスワード", class: "block mb-1 text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.submit "登録する", class: "w-full bg-blue-600 text-white font-semibold py-2 px-4 rounded hover:bg-blue-700 transition" %>
      </div>
    <% end %>

    <div class="mt-6">
      <%= link_to "アカウントをお持ちの方はログイン", new_session_path(resource_name),
      class: "block text-center w-full bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium py-2 px-4 rounded border border-gray-300 transition" %>
    </div>
  </div>
</div>
